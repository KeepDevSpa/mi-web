generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Page {
  id            String         @id @default(cuid())
  slug          String         @unique
  title         String
  description   String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  contentBlocks ContentBlock[]
}

model ContentBlock {
  id        String   @id @default(cuid())
  pageId    String
  section   String
  title     String?
  content   String
  imageUrl  String?
  ctaText   String?
  ctaLink   String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

model PricingCard {
  id                String   @id @default(cuid())
  name              String
  page              String
  selectorKey       String?
  currentPrice      Float
  originalPrice     Float?
  variant           String   @default("blue")
  hasSpeedSelector  Boolean  @default(false)
  features          Json
  isPopular         Boolean  @default(false)
  ctaText           String?
  rateTier          Int      @default(1)
  isActive          Boolean  @default(true)
  isHeroOffer       Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  operator          String?
  hasOperatorChoice Boolean  @default(false)
  isPremium         Boolean  @default(false)
  isVIP             Boolean  @default(false)
  extras            Extra[]
  speeds            Speed[]
}

model Speed {
  id            String      @id @default(cuid())
  label         String
  price         Float
  originalPrice Float?
  pricingCardId String
  pricingCard   PricingCard @relation(fields: [pricingCardId], references: [id])
}

model Extra {
  id            String      @id @default(cuid())
  label         String
  price         Float
  pricingCardId String
  description   String?
  pricingCard   PricingCard @relation(fields: [pricingCardId], references: [id])
}

model InformationCard {
  id              String   @id @default(cuid())
  page            String
  section         String?
  icon            String?
  title           String
  description     String
  content         String?
  imageUrl        String?
  linkUrl         String?
  backgroundColor String?
  textColor       String?
  order           Int      @default(0)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
}

model FAQItem {
  id        String   @id @default(cuid())
  page      String
  question  String
  answer    String
}

model UnifiedHeroConfig {
  id              String   @id @default(cuid())
  page            String   @unique
  title           String
  highlightedText String?
  description     String?
  image           String?
  variant         String   @default("default")
  primaryCta      Json?
  secondaryCta    Json?
  highlights      Json?
  showButtons     Boolean  @default(true)
  contentPosition String   @default("left")
  titleLayout     String   @default("stacked")
  overlayOpacity  Float    @default(0.4)
  textSize        String   @default("medium")
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AdminConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PageSelector {
  id          String   @id @default(cuid())
  page        String
  key         String
  title       String
  subtitle    String?
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([page, key])
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  phone     String
  email     String?
  message   String?
  page      String
  source    String?
  tags      String?
  createdAt DateTime @default(now())
}

model HeroConfig {
  id             String   @id @default(cuid())
  page           String   @unique
  title          String
  subtitle       String?
  description    String
  primaryCta     Json
  secondaryCta   Json
  heroImage      String?
  backgroundType String   @default("gradient")
  variant        String   @default("home")
  highlights     Json?
  showButtons    Boolean  @default(true)
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model NavigationConfig {
  id        String   @id @default(cuid())
  label     String
  href      String
  parent    String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MediaAsset {
  id        String   @id @default(cuid())
  name      String
  type      String
  value     String
  category  String?
  alt       String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MobileTariff {
  id                String   @id @default(cuid())
  name              String
  subtitle          String?
  type              String   @default("eleccion")
  dataAmount        String
  price             Float
  originalPrice     Float?
  features          Json
  isPopular         Boolean  @default(false)
  isHighlighted     Boolean  @default(false)
  hasOperatorChoice Boolean  @default(true)
  order             Int      @default(1)
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ContactLead {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String?
  createdAt DateTime @default(now())
}

model ProcessStep {
  id        String   @id @default(cuid())
  title     String
  content   String
  order     Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Advantage {
  id        String   @id @default(cuid())
  title     String
  content   String
  icon      String?
  order     Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id        String   @id @default(cuid())
  title     String
  content   String
  slug      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogPost {
  id          String   @id @default(cuid())
  title       String
  excerpt     String
  content     String
  slug        String   @unique
  publishedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
}

model Testimonial {
  id        String   @id @default(cuid())
  author    String
  role      String?
  content   String
  image     String?
  order     Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteConfig {
  id           String   @id @default(cuid())
  contactPhone String   @default("1560")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Fin del schema
